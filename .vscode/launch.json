{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "SWA: Run and Debug",
            "configurations": [
                "Debug Backend API",
                "Debug Frontend"
            ],
            "stopAll": true
        },
        {
            "name": "SWA: Attach to CLI",
            "configurations": [
                "Debug Frontend",
                "Debug Backend API"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Debug Frontend",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:4280",
            "preLaunchTask": "swa emulator",
            "presentation": {
                "hidden": true
            }
        },
        {
            "name": "Debug Backend API",
            "type": "node",
            "request": "attach",
            "preLaunchTask": "func: host start",
            "port": 9229,
            "restart": true,
            "presentation": {
                "hidden": true
            }
        }
    ]
}