{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "swa emulator",
            "command": "swa start http://localhost:3000/ --api http://localhost:7071 --run 'cd frontend && npm run start'",
            "problemMatcher": "$swa-watch",
            "isBackground": true
        },
        {
            "type": "func",
            "label": "func: host start",
            "command": "host start",
            "problemMatcher": "$func-node-watch",
            "isBackground": true,
            "dependsOn": "npm install (functions)",
            "options": {
                "cwd": "${workspaceFolder}/api",
                "env": {
                    "languageWorkers__node__arguments": "--inspect=9229"
                }
            }
        }
    ]
}