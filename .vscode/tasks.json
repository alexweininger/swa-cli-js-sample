{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "func",
            "command": "host start",
            "problemMatcher": "$func-node-watch",
            "isBackground": true,
            "dependsOn": "func npm install",
            "options": {
                "cwd": "${workspaceFolder}/api"
            }
        },
        {
            "type": "shell",
            "label": "func npm install",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/api"
            }
        },
        {
            "type": "shell",
            "label": "swa start",
            "command": "swa start http://localhost:3000/ --api http://localhost:7071",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "SWA listening on",
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "func: host start",
                "npm start"
            ]
        },
        {
            "type": "shell",
            "label": "npm start",
            "command": "npm start",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "You can now view .* in the browser",
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            // https://stackoverflow.com/a/60330174
            "label": "Terminate All Tasks",
            "command": "echo ${input:terminate}",
            "type": "shell",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}